import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Mi Primera App',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        colorScheme: ColorScheme.fromSeed(
          seedColor: const Color.fromARGB(185, 61, 239, 141),
        ),
      ),
      home: AppPrincipal(),
    );
  }
}

Map<String, Map<String, Map<String, dynamic>>> inventario = {
  "Electronica": {
    "Laptop": {"Precio": 120, "Stock": 20},
  },
  "Mobiliario": {
    "Mesa": {"Precio": 50.8, "Stock": 12},
  },
};

class AppPrincipal extends StatefulWidget {
  @override
  State<AppPrincipal> createState() => _AppPrincipalState();
}

class _AppPrincipalState extends State<AppPrincipal> {
  void agregarCategoria(String categoria) {
    if (!inventario.containsKey(categoria)) {
      inventario[categoria] = {};
      setState(() {});
    }
  }

  void agregarProducto({
    required String categoria,
    required String producto,
    required double precio,
    required int stock,
  }) {
    inventario.putIfAbsent(categoria, () => {});
    inventario[categoria]![producto] = {"Precio": precio, "Stock": stock};

    setState(() {});
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        elevation: 3,
        backgroundColor: Theme.of(context).colorScheme.inversePrimary,
        title: const Text("ðŸ“¦ Inventario"),
      ),
      body: ListView(
        children: inventario.entries.map((categoria) {
          var categorias = categoria.key;
          return ExpansionTile(
            title: Text(
              "ðŸ“‚ $categorias",
              style: const TextStyle(fontWeight: FontWeight.bold),
            ),
            children: categoria.value.entries
                .map(
                  (prod) => ListTile(
                    title: Text(
                      prod.key,
                      style: const TextStyle(fontWeight: FontWeight.bold),
                    ),
                    subtitle: Column(
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        Text("Precio: ${prod.value["Precio"]}\$"),
                        Text("Stock: ${prod.value["Stock"]} unidades"),
                      ],
                    ),
                  ),
                )
                .toList(),
          );
        }).toList(),
      ),
      floatingActionButton: Column(
        mainAxisSize: MainAxisSize.min,
        children: [
          FloatingActionButton.extended(
            heroTag: "btnCategoria",
            onPressed: () {
              showDialog(
                context: context,
                builder: (context) =>
                    AgregarCategoria(onAgregarCategoria: agregarCategoria),
              );
            },
            label: const Text("ðŸ“‚CategorÃ­a"),
          ),
          const SizedBox(height: 10),
          FloatingActionButton(
            heroTag: "btnProducto",
            onPressed: () {
              showDialog(
                context: context,
                builder: (context) =>
                    AgregarProducto(onAgregar: agregarProducto),
              );
            },
            child: const Icon(Icons.add, color: Colors.white),
          ),
        ],
      ),
    );
  }
}

class AgregarCategoria extends StatefulWidget {
  final Function(String categoria) onAgregarCategoria;

  const AgregarCategoria({super.key, required this.onAgregarCategoria});

  @override
  State<AgregarCategoria> createState() => _AgregarCategoriaState();
}

class _AgregarCategoriaState extends State<AgregarCategoria> {
  final TextEditingController categoriaField = TextEditingController();

  @override
  Widget build(BuildContext context) {
    return AlertDialog(
      title: const Text("ðŸ“‚ Agregar CategorÃ­a"),
      content: TextField(
        controller: categoriaField,
        decoration: const InputDecoration(
          labelText: "CategorÃ­a",
          hintText: "Introduzca nueva categorÃ­a",
        ),
      ),
      actions: [
        TextButton(
          child: const Text("Cancelar"),
          onPressed: () => Navigator.of(context).pop(),
        ),
        ElevatedButton(
          child: const Text("Agregar"),
          onPressed: () {
            final categoria = categoriaField.text.trim();
            if (categoria.isNotEmpty) {
              widget.onAgregarCategoria(categoria);
              Navigator.of(context).pop();
            }
          },
        ),
      ],
    );
  }
}

class AgregarProducto extends StatefulWidget {
  final Function({
    required String categoria,
    required String producto,
    required double precio,
    required int stock,
  })
  onAgregar;

  const AgregarProducto({super.key, required this.onAgregar});

  @override
  State<AgregarProducto> createState() => _AgregarProductoState();
}

class _AgregarProductoState extends State<AgregarProducto> {
  final TextEditingController categoriaField = TextEditingController();
  final TextEditingController productoField = TextEditingController();
  final TextEditingController precioField = TextEditingController();
  final TextEditingController stockField = TextEditingController();

  @override
  Widget build(BuildContext context) {
    return AlertDialog(
      title: const Text("âž• Agregar Producto"),
      content: SingleChildScrollView(
        child: Column(
          children: [
            TextField(
              controller: categoriaField,
              decoration: const InputDecoration(
                labelText: 'CategorÃ­a',
                hintText: "Introduzca CategorÃ­a",
              ),
            ),
            TextField(
              controller: productoField,
              decoration: const InputDecoration(
                labelText: 'Producto',
                hintText: "Introduzca Producto",
              ),
            ),
            TextField(
              controller: precioField,
              keyboardType: TextInputType.number,
              decoration: const InputDecoration(
                labelText: 'Precio',
                hintText: "Introduzca Precio",
              ),
            ),
            TextField(
              controller: stockField,
              keyboardType: TextInputType.number,
              decoration: const InputDecoration(
                labelText: 'Inventario',
                hintText: "Introduzca cuantos hay",
              ),
            ),
          ],
        ),
      ),
      actions: [
        TextButton(
          child: const Text("Cancelar"),
          onPressed: () => Navigator.of(context).pop(),
        ),
        ElevatedButton(
          child: const Text("Agregar"),
          onPressed: () {
            final categoria = categoriaField.text.trim();
            final producto = productoField.text.trim();
            final double? precio = double.tryParse(precioField.text);
            final int? stock = int.tryParse(stockField.text);

            if (categoria.isNotEmpty &&
                producto.isNotEmpty &&
                precio != null &&
                stock != null) {
              widget.onAgregar(
                categoria: categoria,
                producto: producto,
                precio: precio,
                stock: stock,
              );
              Navigator.of(context).pop();
            }
          },
        ),
      ],
    );
  }
}
